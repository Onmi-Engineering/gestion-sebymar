<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_form_inherit_zones_and_routes" model="ir.ui.view">
            <field name="name">res_partner_form_inherit_zones_and_routes</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="route_id"
                           options="{'no_quick_create':True, 'no_create': True, 'no_create_edit':True}"/>
                    <field name="zone_id" domain="[('route_id', '=', route_id)]"
                           options="{'no_quick_create':True, 'no_create': True, 'no_create_edit':True}"/>
                    <field name="company_contact_tag_ids" options="{'color_field': 'color'}" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>