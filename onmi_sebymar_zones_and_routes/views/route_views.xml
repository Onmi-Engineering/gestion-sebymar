<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="route_form_view" model="ir.ui.view">
            <field name="name">route.form</field>
            <field name="model">route</field>
            <field name="arch" type="xml">
                <form string="Routes">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <field name="zone_ids"
                                   options="{'no_quick_create':True, 'no_create': True, 'no_create_edit':True}">
                                <list create="0" edit="0" delete="0">
                                    <field name="name"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="route_tree_view" model="ir.ui.view">
            <field name="name">route.tree</field>
            <field name="model">route</field>
            <field name="arch" type="xml">
                <list string="Routes">
                    <field name="name"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <record id="route_act_window" model="ir.actions.act_window">
            <field name="name">Routes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">route</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Routes.
                </p>
            </field>
        </record>

        <menuitem name="Routes" id="route_menu" parent="contacts.res_partner_menu_config" action="route_act_window"/>

    </data>
</odoo>