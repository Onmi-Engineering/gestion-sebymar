<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="oeng_view_users_tree_inherit_onmi_login_date" model="ir.ui.view">
            <field name="name">oeng_view_users_tree_inherit_onmi_login_date</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login_date']" position="replace">
                    <field name="onmi_login_date"/>
                </xpath>
            </field>
        </record>

        <record id="oeng_view_users_form_inherit_onmi_login_date" model="ir.ui.view">
            <field name="name">oeng_view_users_form_inherit_onmi_login_date</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page name="last_authentication" string="Last Authentication">
                        <group>
                            <field name="onmi_login_date"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>