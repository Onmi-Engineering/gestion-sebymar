<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sebymar_product_template_only_form_view_inherit_subcategories" model="ir.ui.view">
            <field name="name">sebymar_product_template_only_form_view_inherit_subcategories</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <strong>Sub-family</strong>
                    <div name="sub_family" class="o_row">
                        Retail
                        <field name="retail"/>
                        Cabin
                        <field name="cabin"/>
                    </div>
                    <field name="collection_id" options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="type_id" options="{'no_create': True, 'no_create_edit':True}"/>
                </xpath>
            </field>
        </record>

        <record id="sebymar_product_template_tree_view_inherit_subcategories" model="ir.ui.view">
            <field name="name">sebymar_product_template_tree_view_inherit_subcategories</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="retail" optional="hide"/>
                    <field name="cabin" optional="hide"/>
                    <field name="collection_id" optional="hide"/>
                    <field name="type_id" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>