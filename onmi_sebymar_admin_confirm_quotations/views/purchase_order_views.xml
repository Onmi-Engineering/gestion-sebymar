<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sebymar_purchase_order_form_inherit_groups_confirm" model="ir.ui.view">
            <field name="name">sebymar_purchase_order_form_inherit_groups_confirm</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_confirm']" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='button_confirm'][2]" position="attributes">
                    <attribute name="groups">purchase.group_purchase_manager</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>