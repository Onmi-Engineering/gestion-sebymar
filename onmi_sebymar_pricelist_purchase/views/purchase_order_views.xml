<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_form_inherit_pricelist" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.pricelist</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='reminder']" position="after">
                    <label for="pricelist_id"/>
                    <div name="pricelist_purchase" class="o_row">
                        <field name="pricelist_id" options="{'no_open':True,'no_create': True}" domain="[('active', '=', True)]"/>
                        <button
                                string="Update prices"
                                name="update_discount_from_pricelist" class="btn-link mb-1 px-0" icon="fa-refresh"
                                type="object" title="Update discounts of lines and costs depend on pricelist."
                                confirm="This update all line prices, are you sure?"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>