<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Vista heredada res_partner para incluir campo margin y purchase cost-->
        <record id="sebymar_account_move_form_inherit_add_price2" model="ir.ui.view">
            <field name="name">sebymar_account_move_form_inherit_add_price2</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="show_margin" invisible="move_type != 'out_invoice' and move_type != 'out_refund'"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                    <field name="move_type" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="purchase_price" widget="monetary" optional="hide" invisible="move_type != 'out_invoice'"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='purchase_price']" position="after">
                    <field name="margin" widget="monetary" optional="hide" invisible="move_type != 'out_invoice'"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sebymar_view_move_form_inherit_margin">
            <field name="name">sebymar_view_move_form_inherit_margin</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_residual']" position="before">
                    <field name="total_margin" widget="monetary" class="oe_inline" invisible="not show_margin" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>