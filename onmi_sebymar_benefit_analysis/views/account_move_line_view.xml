<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="menu_action_funcion_benefits" model="ir.actions.server">
            <field name="name">Update Benefits</field>
            <field name="model_id" ref="model_account_move_line"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                records.update_benefits()
            </field>
            <field name="binding_model_id" ref="model_account_move_line"/>
        </record>
        <record id="account_tree_view2" model="ir.ui.view">
            <field name="name">account.tree.view2</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <list string="Benefits" editable="bottom" create="0">
                    <field name="move_id" readonly="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="product_categ_id" optional="show"/>
                    <field name="product_retail" optional="show"/>
                    <field name="product_cabin" optional="show"/>
                    <field name="product_collection_id" optional="show"/>
                    <field name="product_type_id" optional="show"/>
                    <field name="quantity" readonly="1"/>
                    <field name="price_unit" widget="monetary" readonly="1"/>
                    <field name="purchase_price" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="margin" widget="monetary" options="{'currency_field': 'currency_id'}"
                           sum="Total Margin"/>
                </list>
            </field>
        </record>

        <record id="action_account_moves_all_tree2" model="ir.actions.act_window">
            <field name="name">Benefits analysis</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">pivot,list,form</field>
            <field name="context">{}</field>
            <field name="domain">[('move_id.state', '=', 'posted'),('move_type', 'in',
                ['out_invoice','out_refund']),('display_type', '=', 'product')]
            </field>
            <field name="view_id" ref="account_tree_view2"/>
            <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'list', 'view_id': ref('account_tree_view2')}),
                    ]"/>
        </record>

        <record id="onmi_view_move_pivot_sales_vs_purchase" model="ir.ui.view">
            <field name="name">onmi.account.move.pivot.sales.vs.purchase</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_pivot"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="replace">
                    <field name="partner_id" type="row"/>
                </xpath>
                <xpath expr="//field[@name='balance']" position="replace">
                    <field name="margin" type="measure"/>
                </xpath>
            </field>
        </record>

        <menuitem
                action='action_account_moves_all_tree2'
                id='menu_account_move_lines_benefit_analysis'
                parent='account.menu_board_journal_1'
                name="Benefit analysis"
                sequence="1"
                groups="account.group_account_manager"
        />
    </data>
</odoo>
