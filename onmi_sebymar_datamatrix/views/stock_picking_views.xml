<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="sebymar_view_picking_form_inherit_datamatrix" model="ir.ui.view">
            <field name="name">sebymar_view_picking_form_inherit_datamatrix</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='operations']" position="inside">
                    <label for="datamatrix_line_ids" invisible="not datamatrix_line_ids"/>
                    <field name="datamatrix_line_ids" mode="tree" context="{'default_picking_id': active_id}" domain="[('picking_id', '=', active_id )]" invisible="not datamatrix_line_ids">
                        <list create="false" editable="top">
                            <field name="product_id" readonly="1"/>
                            <field name="qr_code" string="Datamatrix"/>
                        </list>
                    </field>
                    <button name="generate_datamatrix_lines" type="object" string="Update Datamatrix" confirm="This button delete all QR code registered. Are you sure to continue?"/>
                </xpath>
            </field>
        </record>

        <record id="sebymar_view_picking_internal_search_inherit_datamatrix" model="ir.ui.view">
            <field name="name">sebymar_view_picking_internal_search_inherit_datamatrix</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="datamatrix_line_ids" string="Datamatrix" domain="[('name','ilike',self)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>