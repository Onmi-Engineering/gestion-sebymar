<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sebymar_view_picking_form_inherit_datamatrix" model="ir.ui.view">
            <field name="name">sebymar_view_picking_form_inherit_datamatrix</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='operations']" position="inside">
                    <label for="datamatrix_line_ids" groups="stock.group_stock_user"/>
                    <field name="datamatrix_line_ids" mode="list" groups="stock.group_stock_user">
                        <list create="false" editable="top">
                            <field name="product_id" readonly="1"/>
                            <field name="qr_code" string="Datamatrix"/>
                        </list>
                    </field>
                    <button name="generate_datamatrix_lines"
                            type="object"
                            string="Update Datamatrix"
                            confirm="This button delete all QR code registered. Are you sure to continue?"
                            groups="stock.group_stock_user"/>
                </xpath>
            </field>
        </record>

        <record id="sebymar_view_picking_internal_search_inherit_datamatrix" model="ir.ui.view">
            <field name="name">sebymar_view_picking_internal_search_inherit_datamatrix</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="datamatrix_line_ids" string="Datamatrix" domain="[('name','ilike',self)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
