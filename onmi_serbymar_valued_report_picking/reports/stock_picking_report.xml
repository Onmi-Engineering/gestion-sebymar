<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="menu_action_funcion_benefits2" model="ir.actions.server">
            <field name="name">Update Benefits</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                records.update_prueba()
            </field>
            <field name="binding_model_id" ref="model_stock_picking"/>
        </record>

        <report
                id="onmi_cosmi_report_valued_report_stock_pickings"
                model="stock.picking"
                string="Valued Picking"
                name="onmi_serbymar_valued_report_picking.report_valued_report"
                file="onmi_serbymar_valued_report_picking.report_valued_report"
                report_type="qweb-pdf"
        />
        <template id="stock_report_delivery_has_serial_move_line_valued_report">
            <td>
                <span t-field="move_line.product_id"/>
                <!-- this is an annoying workaround for the multiple types of descriptions (often
                auto-filled) that we do not want to print -->
                <!-- this makes it so we can pre-filter the descriptions in inherited templates
                since we cannot extend the standard "if" condition -->
                <!-- let's agree that pre-filtered descriptions will be set to "" -->
                <t t-if="not description and description != ''">
                    <t t-set="description" t-value="move_line.move_id.description_picking"/>
                </t>
                <p t-if="description !='' and description != move_line.product_id.name">
                    <span t-esc="description"/>
                </p>
            </td>
            <t t-if="has_serial_number" name="move_line_lot">
                <td>
                    <span t-field="move_line.lot_id.name"/>
                </td>
            </t>
            <td class="text-center" name="move_line_lot_qty_done">
                <span t-field="move_line.qty_done"/>
                <span t-field="move_line.product_uom_id"/>
            </td>
            <td name="td_move_price_unit">
                <span t-field="move_line.move_id.price_unit"/>
                <span t-if="move_line.move_id.purchase_line_id"
                      t-field="move_line.move_id.purchase_line_id.currency_id"/>
                <span t-if="move_line.move_id.sale_line_id"
                      t-field="move_line.move_id.sale_line_id.currency_id"/>
            </td>
            <td name="td_move_taxes" class="text-right">
                <span
                        t-esc="', '.join(map(lambda x: (x.description or x.name), move_line.move_id.taxes_id))"/>
            </td>
            <td name="td_move_discount" width="15%">
                <span t-field="move_line.move_id.discount_dif"/>
            </td>
            <td name="td_move_price_subtotal" width="15%">
                <span t-field="move_line.move_id.price_subtotal"/>
                <span t-if="move_line.move_id.purchase_line_id"
                      t-field="move_line.move_id.purchase_line_id.currency_id"/>
                <span t-if="move_line.move_id.sale_line_id"
                      t-field="move_line.move_id.sale_line_id.currency_id"/>
            </td>
        </template>

        <template id="stock_report_delivery_aggregated_move_lines_valued_report">
            <tr t-foreach="aggregated_lines" t-as="line">
                <td>
                    <span t-esc="aggregated_lines[line]['name']"/>
                    <p t-if="aggregated_lines[line]['description']">
                        <span t-esc="aggregated_lines[line]['description']"/>
                    </p>
                </td>
                <td class="text-center" name="move_line_aggregated_qty_ordered">
                    <span t-esc="aggregated_lines[line]['qty_ordered']"
                          t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>

                </td>
                <td class="text-center" name="move_line_aggregated_qty_done">
                    <t t-if="aggregated_lines[line]['qty_done']">
                        <span t-esc="aggregated_lines[line]['qty_done']"
                              t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>

                    </t>
                </td>
                <td class="text-center" name="move_line_aggregated_qty_ordered">
                    <t t-if="aggregated_lines[line].get('price_unit')">
                        <span t-esc="aggregated_lines[line]['price_unit']"
                              t-options="{'widget': 'float', 'decimal_precision': '2'}"/>
                    </t>
                </td>
                <td class="text-center" name="move_line_aggregated_qty_ordered">
                    <t t-if="aggregated_lines[line].get('taxes')">
                        <span t-esc="aggregated_lines[line]['taxes']"/>
                    </t>
                </td>
                <td class="text-center" name="move_line_aggregated_discount">
                    <t t-set="discount_dif"
                       t-value="aggregated_lines[line]['discount_dif'] if aggregated_lines[line].get('discount_dif') else 0"/>
                    <span t-esc="discount_dif" t-raw="0"/>
                </td>
                <td class="text-center" name="move_line_aggregated_qty_ordered">
                    <t t-if="aggregated_lines[line].get('price_subtotal')">
                        <span t-esc="aggregated_lines[line]['price_subtotal']"
                              t-options="{'widget': 'float', 'decimal_precision': '2'}"/>
                    </t>
                </td>
            </tr>
        </template>
        <template id="report_valued_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="onmi_serbymar_valued_report_picking.report_valued_report_document"
                   t-lang="o.partner_id.lang"/>
            </t>
        </template>
        <template id="report_valued_report_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="partner"
                       t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>

                    <t t-set="address">
                        <div name="div_outgoing_address">
                            <div
                                    t-if="o.move_ids_without_package and o.move_ids_without_package[0].partner_id">
                                <span>
                                    <strong>Delivery Address:</strong>
                                </span>
                                <div t-field="o.move_ids_without_package[0].partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            </div>
                            <div
                                    t-if="o.picking_type_id.code != 'internal' and (not o.move_ids_without_package or not o.move_ids_without_package[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                <span>
                                    <strong>Warehouse Address:</strong>
                                </span>
                                <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            </div>
                        </div>
                    </t>
                    <t t-set="information_block">
                        <div class="row">
                            <div class="col-7" name="div_incoming_address">
                                <div t-if="o.picking_type_id.code=='incoming' and partner">
                                    <span>
                                        <strong>Vendor Address:</strong>
                                    </span>
                                </div>
                                <div t-if="o.picking_type_id.code=='internal' and partner">
                                    <span>
                                        <strong>Warehouse Address:</strong>
                                    </span>
                                </div>
                                <div t-if="o.picking_type_id.code=='outgoing' and partner">
                                    <span>
                                        <strong>Customer Address:</strong>
                                    </span>
                                </div>
                                <div t-if="partner" name="partner_header">
                                    <div t-field="partner.commercial_partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                    <p t-if="partner.sudo().commercial_partner_id.vat">
                                        <t
                                                t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>
                                        :
                                        <span
                                                t-field="partner.sudo().commercial_partner_id.vat"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                    <div class="page">
                        <h2>
                            <span t-field="o.name"/>
                        </h2>
                        <div class="row mt32 mb32">
                            <div t-if="o.origin" class="col-auto" name="div_origin">
                                <strong>Order:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div t-if="o.state" class="col-auto" name="div_sched_date">
                                <strong>Shipping Date:</strong>
                                <t t-if="o.state == 'done'">
                                    <p t-field="o.date_done"/>
                                </t>
                                <t t-if="o.state != 'done'">
                                    <p t-field="o.scheduled_date"/>
                                </t>
                            </div>
                        </div>
                        <table class="table table-sm" name="stock_move_table">
                            <thead>
                                <tr>
                                    <th name="th_sm_product">
                                        <strong>Product</strong>
                                    </th>
                                    <th name="th_sm_ordered">
                                        <strong>Ordered</strong>
                                    </th>
                                    <th name="th_sm_quantity">
                                        <strong>Delivered</strong>
                                    </th>
                                    <th name="th_unit_price">
                                        <strong>Unit Price</strong>
                                    </th>
                                    <th name="th_taxes">
                                        <strong>Taxes</strong>
                                    </th>
                                    <th name="th_discount">
                                        <strong>Desc.%</strong>
                                    </th>
                                    <th name="th_total_price">
                                        <strong>Total Price</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="lines"
                                   t-value="o.move_ids.filtered(lambda x: x.product_uom_qty)"/>
                                <tr t-foreach="lines" t-as="move">
                                    <td name="td_description_product">
                                        <span t-field="move.product_id"/>
                                        <p
                                                t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                            <span t-field="move.description_picking"/>
                                        </p>
                                    </td>
                                    <td name="td_move_product_qty">
                                        <span t-field="move.product_uom_qty"/>
                                    </td>
                                    <td name="td_move_qty_done">
                                        <span t-field="move.quantity_done"/>
                                    </td>
                                    <td name="td_move_price_unit">
                                        <span t-field="move.price_unit" widget="monetary"/>
                                        <span t-field="o.company_id.currency_id.symbol"/>
                                    </td>
                                    <td name="td_move_taxes" class="text-right">
                                        <span
                                                t-esc="', '.join(map(lambda x: (x.description or x.name), move.taxes_id))"/>
                                    </td>
                                    <td name="td_move_price_discount_dif" width="15%">
                                        <span t-field="move.discount"/>
                                    </td>
                                    <td name="td_move_price_subtotal" width="15%">
                                        <t t-set="subtotal" t-value="move.price_subtotal"/>
                                        <t t-if="move.discount">
                                            <t t-set="discounted_subtotal"
                                               t-value="subtotal - (subtotal * (move.discount / 100))"/>
                                            <t t-esc="discounted_subtotal" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="subtotal" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                        </t>
                                        <span t-field="o.company_id.currency_id.symbol"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-sm" style="width: 50%; margin-left: auto; margin-right: 0;">
                            <tr>
                                <th colspan="5">
                                    <strong>TOTAL DISCOUNT</strong>
                                </th>
                                <th>
                                    <span t-field="o.total_discount" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                    <span t-field="o.company_id.currency_id.symbol"/>
                                </th>
                            </tr>
                            <tr>
                                <th colspan="5">
                                    <strong>TOTAL WITHOUT TAXES</strong>
                                </th>
                                <th>
                                    <span t-field="o.total_prices_without_taxes" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                    <span t-field="o.company_id.currency_id.symbol"/>
                                </th>
                            </tr>
                            <tr>
                                <th colspan="5">
                                    <strong>TAXES</strong>
                                </th>
                                <th>
                                    <span t-field="o.total_taxes" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                    <span t-field="o.company_id.currency_id.symbol"/>
                                </th>
                            </tr>
                            <tr>
                                <th colspan="5">
                                    <strong>TOTAL WITH TAXES</strong>
                                </th>
                                <th>
                                    <span t-field="o.total_prices_with_taxes_final" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                    <span t-field="o.company_id.currency_id.symbol"/>
                                </th>
                            </tr>
                        </table>


                        <t t-set="backorders"
                           t-value="o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))"/>
                        <t t-if="o.backorder_ids and backorders">
                            <p class="mt-5">
                                <span>Remaining quantities not yet delivered:</span>
                            </p>
                            <table class="table table-sm" name="stock_backorder_table"
                                   style="table-layout: fixed;">
                                <thead>
                                    <tr>
                                        <th name="th_sb_product" style="width:35%!important;">
                                            <strong>Product</strong>
                                        </th>
                                        <th name="th_sb_quantity" class="text-center">
                                            <strong>Quantity</strong>
                                        </th>
                                        <th name="th_sb_price_unit">
                                            <strong>Price Unit</strong>
                                        </th>
                                        <th name="th_sb_taxes">
                                            <strong>Taxes</strong>
                                        </th>
                                        <th name="th_sb_discount">
                                            <strong>Desc.%</strong>
                                        </th>
                                        <th name="th_sb_total_price">
                                            <strong>Total Price</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="backorders" t-as="backorder">
                                        <t t-set="bo_lines"
                                           t-value="backorder.move_ids.filtered(lambda x: x.product_uom_qty)"/>
                                        <tr t-foreach="bo_lines" t-as="bo_line">
                                            <td class="w-auto">
                                                <span t-field="bo_line.product_id"/>
                                                <p
                                                        t-if="bo_line.description_picking != bo_line.product_id.name and bo_line.description_picking != bo_line.product_id.display_name">
                                                    <span t-field="bo_line.description_picking"/>
                                                </p>
                                            </td>
                                            <td class="text-center w-auto">
                                                <span t-field="bo_line.product_uom_qty"/>
                                            </td>
                                            <td class="text-center w-auto">
                                                <span t-field="bo_line.price_unit"/>
                                                <span t-field="o.company_id.currency_id.symbol"/>
                                            </td>
                                            <td name="td_move_taxes" class="text-right">
                                                <span
                                                        t-esc="', '.join(map(lambda x: (x.description or x.name), move.taxes_id))"/>
                                            </td>
                                            <td name="td_move_price_discount_dif">
                                                <span t-field="bo_line.discount"/>
                                            </td>
                                            <td>
                                                <t t-set="subtotal" t-value="bo_line.price_subtotal"/>
                                                <t t-if="bo_line.discount">
                                                    <t t-set="discounted_subtotal"
                                                       t-value="subtotal - (subtotal * (bo_line.discount / 100))"/>
                                                    <t t-esc="discounted_subtotal" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="subtotal" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                                </t>
                                                <span t-field="o.company_id.currency_id.symbol"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <table class="table table-sm" style="width: 50%; margin-left: auto; margin-right: 0;">
                                <tr>
                                    <th colspan="5">
                                        <strong>TOTAL DISCOUNT</strong>
                                    </th>
                                    <th>
                                        <span t-field="o.total_discount_taxes" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                        <span t-field="o.company_id.currency_id.symbol"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan="5">
                                        <strong>TOTAL WITHOUT TAXES</strong>
                                    </th>
                                    <th>
                                        <span t-field="o.total_prices_without_taxes_backorders" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                        <span t-field="o.company_id.currency_id.symbol"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan="5">
                                        <strong>TAXES</strong>
                                    </th>
                                    <th>
                                        <span t-field="o.total_taxes_backorders" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                        <span t-field="o.company_id.currency_id.symbol"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan="5">
                                        <strong>TOTAL WITH TAXES</strong>
                                    </th>
                                    <th>
                                        <span t-field="o.total_prices_with_taxes_final_backorders" t-options='{"widget": "float", "precision": 2, "truncate": true}'/>
                                        <span t-field="o.company_id.currency_id.symbol"/>
                                    </th>
                                </tr>
                            </table>
                        </t>

                        <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                            <div class="offset-8">
                                <strong>Signature</strong>
                            </div>
                            <div class="offset-8">
                                <img t-att-src="image_data_uri(o.signature)"
                                     style="max-height: 4cm; max-width: 8cm;"/>
                            </div>
                            <div class="offset-8 text-center">
                                <p t-field="o.partner_id.name"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>