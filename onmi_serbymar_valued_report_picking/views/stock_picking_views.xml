<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="onmi_view_picking_form_inherit_add_fields_lines" model="ir.ui.view">
            <field name="name">onmi.view.picking.form.inherit.add.fields.lines</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="after">
                    <field name="price_unit" optional="show" widget="monetary" readonly="True"/>
                    <field name="taxes_id" optional="show" readonly="True" widget="many2many_tags"/>
                    <field name="discount" optional="show" widget="monetary" readonly="True"/>
                    <field name="price_subtotal" widget="monetary" readonly="True"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="backorders" string="Pending pickings" invisible="not backorder_ids">
                        <field name="backorder_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>